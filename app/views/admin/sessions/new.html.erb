<div class="container admin_sessions_new">
  <h2>管理者ログイン</h2>
  <table>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <tr>
      <div class="field">
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </div>
    </tr>

    <tr>
      <div class="field">
        <td><%= f.label :パスワード %></td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </div>
    </tr>
    <tr>
      <div class="actions">
        <td></td>
        <td><%= f.submit "ログイン", class:"btn btn-primary" %></td>
      </div>
    </tr>
  <% end %>
  </table>

  <%= render "admin/shared/links" %>
</div>