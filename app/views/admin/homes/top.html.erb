<div class="container">
  <h3>注文履歴一覧</h3>
  <table class="table">
    <thead class="table-active">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
            <%= l order.created_at,format: :long %>
          <% end %>
          </td>
        <td><%= order.customer.last_name+order.customer.first_name %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.order_status_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row justify-content-center item_index"><%= paginate @orders %></div>
</div>