<div class="container">
<h3><%= @customer.last_name+@customer.first_name+"さんの会員情報編集" %></h3>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <table height="350" class="col-lg-8">
    <tr><div class="field">
      <td><%= f.label :last_name, "氏名" %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </div></tr>
    <tr><div class="field">
      <td><%= f.label :last_name, "フリガナ" %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </div></tr>
    <tr><div class="field">
      <td><%= f.label :postal_code, "郵便番号" %></td>
      <td><%= f.text_field :postal_code %></td>
    </div></tr>
    <tr><tr><div class="field">
      <td><%= f.label :address, "住所" %></td>
      <td><%= f.text_area :address %></td>
    </div></tr>
    <tr><div class="field">
      <td><%= f.label :telephone_number, "電話番号" %></td>
      <td><%= f.text_field :telephone_number %></td>
    </div></tr>
    <tr><div class="field">
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </div></tr>
    <tr><div class="field">
      <td><%= f.label :is_deleted, "会員ステータス" %></td>
      <td>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
      </td>
    </div></tr>
    <tr>
      <td></td>
      <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
    </tr>
  </table>
  <% end %>
</div>