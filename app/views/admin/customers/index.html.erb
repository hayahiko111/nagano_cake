<div class="container admmin_customer_index">
  <h1>会員一覧</h1>
  <div class="d-flex justify-content-center">
  <table class="table col-lg-10">
    <thead class="table-active">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td>
          <%= link_to admin_customer_path(c.id) do %>
            <%= c.last_name+c.first_name %>
          <% end %>
        </td>
        <td><%= c.email %></td>
        <td>
          <% if c.is_deleted == false %>
            <div class="text-success">有効</div>
          <% else %>
            <div class="text-secondary">退会</div>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>