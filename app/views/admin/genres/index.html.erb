<h1>ジャンル一覧・追加</h1>
<%= form_with model: @gerne do |f| %>
  <label for="genre">ジャンル名</label>
  <%= f.text_field :name, class:"form-control genre"%>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genres| %>
    <tr>
      <td>
        <%= genres.name %>
      </td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>