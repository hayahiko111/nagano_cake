<div class="container admin_item_edit">
<h3>商品編集</h3>
<%= form_with model: @item, url:admin_item_path(@item.id), method: :patch do |f| %>
  <table class="row justify-content-center">
    <tr>
      <td><%= f.label :image, "商品画像" %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :name, "商品名" %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :introduction, "商品説明" %></td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td><%= f.label :genre_id, "ジャンル" %></td>
      <td><%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id]}, { include_blank: '-- 選択してください --'} %></td>
    </tr>
    <tr>
      <td><%= f.label :price, "税抜き価格" %></td>
      <td><%= f.text_field :price, class:"price" %><%= f.label "円", class:"price" %></td>
    </tr>
    <tr>
      <td><%= f.label :is_active, "販売ステータス" %></td>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中" %>
      </td>
    </tr>
  </table>
  <div class="text-center info_enter_btn">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
    <% end %>
  </div>
</div>