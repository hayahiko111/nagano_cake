<h1>商品一覧</h1>
<%= link_to new_admin_item_path, method: :get do %>
  <i class="fa-solid fa-circle-plus"></i>
<% end %>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>販売ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <th><%= link_to item.name, admin_item_path(item.id) %></th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      <th><% if item.is_active == true %>
            <%= "販売中" %>
          <% else %>
            <%= "販売停止中" %>
          <% end %></th>
    </tr>
  <% end %>
  </tbody>
</table>