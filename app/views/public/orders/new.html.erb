<h1>注文情報入力</h1>
<%= form_with model: @order, url:confirm_orders_path do |f| %>
<field>
  <h4>支払い方法</h4>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</field>

<field>
  <h4>お届け先</h4>
  <%= f.radio_button :select_address, 0 %>
  <%= f.label :address_id, "ご自身の住所" %>
  <%= '〒' + current_customer.postal_code + ' ' + current_customer.address %><br>
  <%= current_customer.last_name+current_customer.first_name %><br>

  <%= f.radio_button :select_address, 1 %>
  <%= f.label :address_id, "登録済住所から選択" %><br>
  <%= f.select :address_id, options_from_collection_for_select(@address.all, :id, :address_display) %><br>

  <%= f.radio_button :select_address, 2 %>
  <%= f.label :address_id, "新しいお届け先" %><br>
  <%= f.text_field :postal_code %><br>
  <%= f.text_area :address %><br>
  <%= f.text_field :name %>
</field>
  <%= f.submit "確認画面へ進む" %>
<% end %>