<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr><div class="field">
    <td><%= f.label :last_name, "名前" %></td>
    <td><span>(性)</span><%= f.text_field :last_name %></td>
    <td><span>(名)</span><%= f.text_field :first_name %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :last_name, "フリガナ" %></td>
    <td><span>(セイ)</span><%= f.text_field :last_name_kana %></td>
    <td><span>(メイ)</span><%= f.text_field :first_name_kana %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :email, "メールアドレス" %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
    <td><%= f.text_field :postal_code %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :address, "住所" %></td>
    <td><%= f.text_area :address %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
    <td><%= f.text_field :telephone_number %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :password, "パスワード(6文字以上)" %></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </div></tr>

  <tr><div class="field">
    <td><%= f.label :password_confirmation, "パスワード(確認用)"  %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div></tr>

  <tr><div class="actions">
    <td></td>
    <td><%= f.submit "Sign up" %></td>
    <td></td>
  </div></tr>
</table>
<% end %>

<%= render "public/shared/links" %>
