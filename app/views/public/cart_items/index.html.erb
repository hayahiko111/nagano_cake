<h1>ショッピングカート</h1><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @cart_items.each do |c_item| %>
    <tr>
      <td><%= c_item.item.name %></td>
      <td><%= c_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= c_item.amount %></td>
      <td><%= c_item.subtotal.to_s(:delimited) %></td>
      <td><%= link_to "削除する", cart_item_path(c_item.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>